<div class="signIn">
  <form class="login-form">
    <div>
      <label for="email-login">Email:</label>
      <input type="text" id="email-login" />
    </div>
    <div>
      <label for="password-login">Password:</label>
      <input type="password" id="password-login" />
    </div>
    <div>
      <button type="submit">login</button>
    </div>
  </form>
  <div style="text-align: center;">
    <p>Don't have an Account?<button class="signpBtn">Sign Up Here!</button></p>
  </div>
</div>  

<div class="signUp hide">
  <form class="signup-form">
    <div>
      <label for="username-signup">Username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div>
      <label for="email-signup">Email:</label>
      <input type="email" id="email-signup" />
    </div>
    <div>
      <label for="password-signup">Password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <button type="submit">signup</button>
    </div>
  </form>
  <div style="text-align: center;">
    <p>Already have an Account?<button class="signnBtn">Sign In Here!</button></p>
  </div>
</div>

<script>

var signinForm = document.querySelector('.signIn');
var signupForm = document.querySelector('.signUp');
var signinBtn = document.querySelector('.signnBtn');
var signupBtn = document.querySelector('.signpBtn');


function signIn() {
  signinForm.setAttribute('class', 'show');
  signupForm.setAttribute('class', 'hide');
}
function signUp() {
  signupForm.setAttribute('class', 'show');
  signinForm.setAttribute('class', 'hide');
}

signinBtn.addEventListener('click', signIn);
signupBtn.addEventListener('click', signUp);

</script>

<script src="/javascript/login.js"></script>